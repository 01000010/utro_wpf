<UserControl x:Class="utro_wpf.PaymentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:utro_wpf"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Border Background="{StaticResource Main1Brush}">
        <StackPanel>
            
            <TextBox Tag="CARD NUMBER" Margin="5" local:IsFocusedProperty.Value="True" Height="40"/>
            <TextBox Tag="CARDHOLDER NAME" Margin="5" Height="40"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Tag="VALID THRU" Margin="5" Height="40"/>
                <PasswordBox Tag="CVV" x:Name="CVVBox" Margin="5" Height="40"/>
            </StackPanel>
            <Button Content="Оплатить" IsDefault="True"/>
        </StackPanel>
    </Border>
</UserControl>
